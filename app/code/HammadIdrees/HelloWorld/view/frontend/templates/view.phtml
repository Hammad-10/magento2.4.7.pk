<?php
$block = $this->getLayout()->getBlock('postview');
$post = $block->getPostData();

if ($post && $post->getId()) {
    echo '<h1>' . $post->getTitle() . '</h1>';
    if ($post->getImage()) {
        echo '<img src="' . $this->getUrl('media/test/' . $post->getImage()) . '" alt="' . $post->getTitle() . '" style="width:200px; height:auto;"><br />';
    }
    echo '<p>' . $post->getContent() . '</p>';
} else {
    echo '<p>Post not found.</p>';
}
?>
